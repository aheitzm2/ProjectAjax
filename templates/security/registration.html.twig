{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% include "navbar.html.twig" %}
    <div class="container">
        <div class="jumbotron">
            <h1>Inscrivez-vous !</h1>
            {{ form_start(form) }}
            <div class="md-form form-lg">
                {{ form_row(form.username, {'label': "Nom d'utilisateur", 'attr':{'class':'form-control form-control-lg', 'id':'inputUser'}}) }}
            </div>
            <div class="md-form form-lg">
                {{ form_row(form.email, {'label': "Adresse e-mail", 'attr':{'class':'form-control form-control-lg', 'id':'inputUser'}}) }}
            </div>
            <div class="md-form form-lg">
                {{ form_row(form.password, {'label': "Mot de passe", 'attr':{'class':'form-control form-control-lg', 'id':'inputUser'}}) }}
            </div>
            <div class="md-form form-lg">
                {{ form_row(form.confirm_password, {'label': "Confirmer le mot de passe", 'attr':{'class':'form-control form-control-lg', 'id':'inputUser'}}) }}
            </div>
            <div class="form-group">
                <button type="submit" class="fast animated bounce btn btn-info btn-block my-4">S'inscrire</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
